    </section>

    <!-- 5. CHAT -->
    <section id="view-chat" class="hidden fade-in max-w-4xl mx-auto px-6 py-12">
        <div class="bg-white rounded-3xl shadow-xl overflow-hidden h-[60vh] flex flex-col border border-slate-100">
            <div class="bg-slate-900 p-4 text-white flex justify-between items-center">
                <div class="flex items-center gap-2">
                    <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                    <span class="font-bold">Círculo de Apoio</span>
                </div>
                <button onclick="window.setNickname()" class="text-xs bg-white/10 px-3 py-1 rounded-full hover:bg-white/20 transition">Apelido: <span id="current-nick">...</span></button>
            </div>
            <div id="chat-messages" class="flex-grow p-4 overflow-y-auto space-y-4 bg-slate-50 flex flex-col">
                <p class="text-center text-slate-400 text-sm py-10">Conectando ao círculo de conversa...</p>
            </div>
            <div class="p-4 bg-white border-t flex gap-2">
                <input type="text" id="chat-input" class="flex-grow p-3 bg-slate-100 rounded-xl outline-none" placeholder="Envie uma mensagem de carinho...">
                <button onclick="window.sendMessage()" class="bg-amber-500 p-3 rounded-xl hover:bg-amber-400 transition"><i data-lucide="send" class="w-5 h-5 text-slate-900"></i></button>
