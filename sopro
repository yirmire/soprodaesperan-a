    <!-- SCRIPT CENTRAL -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, onAuthStateChanged, signInWithCustomToken } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, collection, addDoc, query, onSnapshot, serverTimestamp, limit } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // Global State & Config
        const firebaseConfig = JSON.parse(__firebase_config);
        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        const db = getFirestore(app);
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'sopro-v2-stable';
        const apiKey = ""; 

        let user = null;
        let nickname = localStorage.getItem('sopro_nickname') || 'Viajante ' + Math.floor(Math.random() * 999);
        document.getElementById('current-nick').innerText = nickname;

        // AUTHENTICATION (Rule 3)
        const initAuth = async () => {
            try {
                if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
                    await signInWithCustomToken(auth, __initial_auth_token);
                } else {
                    await signInAnonymously(auth);
                }
            } catch (err) {
                console.error("Auth failed", err);
            }
        };

        onAuthStateChanged(auth, u => {
            user = u;
            if (u) {
                startDataListeners();
            }
        });

        initAuth();

        // 1. NAVIGATION (Explicit Window Export)
        window.switchTab = (tab) => {
            const views = ['home', 'panic', 'mural', 'pill', 'chat'];
            views.forEach(v => {
                const el = document.getElementById(`view-${v}`);
                if(el) el.classList.add('hidden');
            });
            
            const target = document.getElementById(`view-${tab}`);
            if(target) target.classList.remove('hidden');

            const navBtns = ['home', 'mural', 'pill', 'chat'];
            navBtns.forEach(b => {
                const btn = document.getElementById(`btn-${b}`);
                if(!btn) return;
                if(b === tab) {
                    btn.className = "nav-link font-bold text-amber-600 border-b-2 border-amber-600 pb-1";
                } else {
                    btn.className = "nav-link font-semibold text-slate-500 hover:text-amber-600";
                }
            });
            window.scrollTo(0,0);
            lucide.createIcons();
        };

        // 2. INTERVENTION (REFINED)
        let interventionTimer = null;
        window.startIntervention = () => {
            document.getElementById('view-panic').classList.remove('hidden');
            let seconds = 60;
            const timerEl = document.getElementById('panic-timer');
            const textEl = document.getElementById('breathing-text');
            const circleEl = document.getElementById('breathing-circle');
            
            clearInterval(interventionTimer);
            
            const updateCycle = () => {
                const phase = (60 - seconds) % 8;
                if (phase < 4) {
                    textEl.innerText = "Inspire";
                    circleEl.className = "breathing-circle expand";
                } else {
                    textEl.innerText = "Expire";
                    circleEl.className = "breathing-circle shrink";
                }
            };

            updateCycle();
            interventionTimer = setInterval(() => {
                seconds--;
                timerEl.innerText = seconds + 's';
                updateCycle();

                if (seconds <= 0) {
                    window.stopIntervention();
                    alert("Você concluiu 1 minuto de pausa. Respire fundo e volte devagar.");
                }
            }, 1000);
        };

        window.stopIntervention = () => {
            clearInterval(interventionTimer);
            document.getElementById('view-panic').classList.add('hidden');
        };

        // 3. MURAL (Rule 1 & 2)
        window.postFailure = async () => {
            const input = document.getElementById('failure-input');
            const val = input.value.trim();
            if(!val || !user) return;

            try {
                await addDoc(collection(db, 'artifacts', appId, 'public', 'data', 'failures'), {
                    text: val,
                    timestamp: serverTimestamp()
                });
                input.value = '';
            } catch (e) { console.error(e); }
        };

        // 4. PILLS & SCRIPTS
        const noScripts = {
            work: "Agradeço o convite, mas no momento estou focado em prioridades já estabelecidas e não consigo assumir essa nova tarefa com a qualidade necessária. Podemos conversar em outro momento?",
            friends: "Poxa, adoraria ir, mas hoje meu corpo e minha mente estão pedindo uma pausa total. Vou ficar quietinho em casa para recarregar. Divirtam-se por mim!",
            family: "Entendo que é importante, mas hoje não tenho energia emocional para esse compromisso. Preciso de um tempo para mim. Espero que entendam."
        };

        window.generateNo = (type) => {
            document.getElementById('no-script-box').innerText = noScripts[type];
        };

        window.copyNo = () => {
            const text = document.getElementById('no-script-box').innerText;
            if(text.includes("Escolha")) return;
            navigator.clipboard.writeText(text).then(() => alert("Copiado!")).catch(() => {
                const textArea = document.createElement("textarea");
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                alert("Copiado!");
            });
        };

        // 5. CHAT
        window.sendMessage = async () => {
            const input = document.getElementById('chat-input');
            const val = input.value.trim();
            if(!val || !user) return;
            try {
                await addDoc(collection(db, 'artifacts', appId, 'public', 'data', 'messages'), {
                    text: val,
                    nickname: nickname,
                    uid: user.uid,
                    timestamp: serverTimestamp()
                });
                input.value = '';
            } catch (e) { console.error(e); }
        };

        window.setNickname = () => {
            const n = prompt("Escolha um apelido carinhoso:", nickname);
            if(n && n.trim()) {
                nickname = n.trim().substring(0, 15);
                localStorage.setItem('sopro_nickname', nickname);
                document.getElementById('current-nick').innerText = nickname;
            }
        };

        // 6. AI WITH BACKOFF
        window.askAI = async () => {
            const input = document.getElementById('ai-input').value.trim();
            const output = document.getElementById('ai-output');
            const btn = document.getElementById('ai-btn');
            if(!input) return;

            btn.disabled = true;
            btn.innerHTML = 'Ouvindo<span class="loading-dots"></span>';
            output.classList.remove('hidden');
            output.innerText = "Refletindo sobre as suas palavras...";

            const callGemini = async (retries = 5, delay = 1000) => {
                try {
                    const res = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`, {
                        method: 'POST',
                        headers: {'Content-Type': 'application/json'},
                        body: JSON.stringify({
                            contents: [{parts: [{text: input}]}],
                            systemInstruction: {parts: [{text: "Você é um conselheiro realista e acolhedor. Valide o cansaço do usuário. Não use frases feitas. Responda em no máximo 3 frases com um tom de 'estou aqui com você'."}]}
                        })
                    });
                    if(!res.ok) throw new Error();
                    const data = await res.json();
                    return data.candidates?.[0]?.content?.parts?.[0]?.text;
                } catch (e) {
                    if (retries > 0) {
                        await new Promise(r => setTimeout(r, delay));
                        return callGemini(retries - 1, delay * 2);
                    }
                    throw e;
                }
            };

            try {
                const text = await callGemini();
                output.innerText = text;
            } catch (e) {
                output.innerText = "Tive uma falha na conexão, mas lembre-se: seu valor não depende do quanto você faz hoje.";
            } finally {
                btn.disabled = false;
                btn.innerText = 'Receber Apoio';
            }
        };

        // 7. LISTENERS (Rule 2: Fetch and Filter in memory)
        function startDataListeners() {
            if(!user) return;

            // Mural Listener
            onSnapshot(collection(db, 'artifacts', appId, 'public', 'data', 'failures'), (snap) => {
                const container = document.getElementById('failures-list');
                const fails = [];
                snap.forEach(d => fails.push(d.data()));
                fails.sort((a,b) => (b.timestamp?.seconds || 0) - (a.timestamp?.seconds || 0));
                
                container.innerHTML = fails.slice(0, 20).map(f => `
                    <div class="glass-card p-4 rounded-xl border-l-4 border-slate-300 animate-fade-in">
                        <p class="text-sm italic text-slate-700">"${f.text}"</p>
                    </div>
                `).join('');
            }, (err) => console.error("Mural error", err));

            // Chat Listener
            onSnapshot(collection(db, 'artifacts', appId, 'public', 'data', 'messages'), (snap) => {
                const container = document.getElementById('chat-messages');
                const msgs = [];
                snap.forEach(d => msgs.push(d.data()));
                msgs.sort((a,b) => (a.timestamp?.seconds || 0) - (b.timestamp?.seconds || 0));
                
                if(msgs.length === 0) {
                    container.innerHTML = '<p class="text-center text-slate-400 text-sm py-10">O silêncio também é bom. Mas se quiser falar, o chat está livre.</p>';
                    return;
                }

                container.innerHTML = msgs.slice(-40).map(m => {
                    const isMe = m.uid === user.uid;
                    return `
                        <div class="flex flex-col ${isMe ? 'items-end' : 'items-start'} animate-fade-in">
                            <span class="text-[10px] text-slate-400 px-2 uppercase font-bold">${m.nickname || 'Viajante'}</span>
                            <div class="max-w-[85%] px-4 py-2 rounded-2xl ${isMe ? 'bg-amber-500 text-slate-900' : 'bg-white text-slate-600 border border-slate-200'} shadow-sm text-sm">
                                ${m.text}
                            </div>
                        </div>
                    `;
                }).join('');
                container.scrollTop = container.scrollHeight;
            }, (err) => console.error("Chat error", err));
        }

        // Initialize Icons
        lucide.createIcons();
    </script>
</body>
</html>

