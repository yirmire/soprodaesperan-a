                <div class="flex flex-wrap gap-2 mb-6">
                    <button onclick="window.generateNo('work')" class="bg-white px-4 py-2 rounded-lg text-sm font-semibold border border-amber-200 hover:bg-amber-100 transition">Trabalho</button>
                    <button onclick="window.generateNo('friends')" class="bg-white px-4 py-2 rounded-lg text-sm font-semibold border border-amber-200 hover:bg-amber-100 transition">Amigos</button>
                    <button onclick="window.generateNo('family')" class="bg-white px-4 py-2 rounded-lg text-sm font-semibold border border-amber-200 hover:bg-amber-100 transition">Família</button>
                </div>

                <div id="no-script-box" class="bg-white p-4 rounded-xl border border-amber-100 min-h-[100px] text-slate-700 text-sm italic relative flex items-center justify-center text-center">
